<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="mrsuh_jsonvalidation.json_validator"
                 class="Mrsuh\JsonValidationBundle\JsonValidator\JsonValidator">
            <argument type="service" id="file_locator"/>
        </service>
        <service id="mrsuh_jsonvalidation.validate_json_request_listener"
                 class="Mrsuh\JsonValidationBundle\Annotation\ValidateJsonRequestListener">
            <argument type="service" id="mrsuh_jsonvalidation.json_validator"/>
        </service>
        <service id="mrsuh_jsonvalidation.validate_json_response_listener"
                 class="Mrsuh\JsonValidationBundle\Annotation\ValidateJsonResponseListener">
            <argument type="service" id="mrsuh_jsonvalidation.json_validator"/>
            <argument type="service" id="logger"/>
        </service>
        <service id="mrsuh_jsonvalidation.json_validation_exception_listener"
                 class="Mrsuh\JsonValidationBundle\EventListener\JsonValidationExceptionListener">
            <argument type="service" id="logger"/>
        </service>
    </services>

</container>
